#include <iostream>
using namespace std;
bool isBuzzNumber(int num)
{
    if (num % 7 == 0 || num % 10 == 7)
    {
        return true;
    }
    return false;
}
int main()
{
    int num;
    cout << "Enter a number: ";
    cin >> num;
    if (isBuzzNumber(num))
    {
        cout << num << " is a Buzz Number." << endl;
    } else
    {
        cout << num << " is not a Buzz Number." << endl;
    }
    return 0;
}
